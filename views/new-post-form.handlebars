                <input type="text" name="title" id="title" class="shadow-sm border border-black focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" placeholder="">
            </div>
    </div>
        <div>
        <label for="content" class="block text-md font-large text-gray-700">Content</label>
            <div class="mt-1">
                <textarea type="textarea" rows="4" cols="50" name="content" id="content" class="shadow-sm border border-black focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" placeholder=""></textarea>
            </div>
    </div>
    <div class="flex justify-end">
    <button id="post-submit" type="submit" class="px-4 py-2 mt-3 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
  Post
</button>
</div>
</form>
  </div>
</div>
</div>
